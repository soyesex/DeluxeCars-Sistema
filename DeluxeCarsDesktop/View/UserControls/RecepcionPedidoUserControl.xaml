<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.RecepcionPedidoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             xmlns:behaviors="clr-namespace:DeluxeCarsDesktop.Behaviors"
             mc:Ignorable="d" 
             MaxWidth="900"
             MinHeight="450"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <Style x:Key="WhiteHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontFamily" Value="{DynamicResource Font.Poppins}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="CustomDataGridCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="{DynamicResource Font.Poppins}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Brand.NavyDeep}"/>
                    <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Titulo}" FontSize="35" Style="{StaticResource H1TextStyle}" Margin="10 10 10 20"/>

        <Border Margin="10 0 10 10" Grid.Row="1" CornerRadius="10" 
        Background="{StaticResource Brush.Brand.CharcoalLight}" 
         BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1.2">
        <DataGrid ItemsSource="{Binding ItemsARecepcionar}" 
                  Style="{StaticResource AppDataGridStyle}"
                ColumnHeaderStyle="{StaticResource WhiteHeaderStyle}" 
                CellStyle="{StaticResource CustomDataGridCellStyle}"
                GridLinesVisibility="Horizontal"
                CanUserAddRows="False"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                CanUserSortColumns="True">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" IsReadOnly="True" Width="*"/>

                <DataGridTextColumn Header="Cant. Pedida" Binding="{Binding CantidadPedida}" IsReadOnly="True" Width="*"/>

                <DataGridTemplateColumn Header="Cant. Recibida" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding CantidadRecibida, UpdateSourceTrigger=PropertyChanged}"
                            behaviors:InputBehaviors.SoloNumeros="True"
                             Style="{StaticResource DarkInputControlStyle}" TextAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Notas de Recepción" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding NotaRecepcion, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DarkInputControlStyle}"
                             AcceptsReturn="True"  
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Confirmar Recepción" Command="{Binding ConfirmarRecepcionCommand}" 
                    Style="{StaticResource ElegantShadowGhostButton}"
Tag="{StaticResource Brush.Menu.GreenForest}" Width="210"/>
            <Button Content="Cancelar" Command="{Binding CloseAction}"
                    Style="{StaticResource ElegantShadowGhostButton}"
Tag="{StaticResource Brush.Menu.GreenForest}" Width="120" Margin="50,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
