@model IEnumerable<Aplicacion.Application.ViewModels.UsuarioViewModel>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">@ViewData["Title"]</h1>
        <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">Volver al Dashboard</a>
    </div>

    <div class="card order-details-card p-4">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID de Usuario</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><small>@user.Id</small></td>
                            <td><strong>@user.UserName</strong></td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge me-1 @(role == "Administrador" ? "bg-danger" : "bg-primary")">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Sin rol</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="#" class="btn btn-sm btn-outline-warning disabled">Editar Roles</a>
                                <a href="#" class="btn btn-sm btn-outline-danger ms-2 disabled">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
