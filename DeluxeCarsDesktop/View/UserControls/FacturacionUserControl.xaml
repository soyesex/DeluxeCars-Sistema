    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding ClientesDisponibles}"
                      SelectedItem="{Binding ClienteSeleccionado}"
                      DisplayMemberPath="Nombre"
                      materialDesign:HintAssist.Hint="Seleccionar Cliente"
                      Style="{StaticResource AppComboBoxStyle}"
                      IsEditable="True"
                      IsTextSearchEnabled="True"
                      Margin="0,0,20,0"/>

            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding MetodosDePago}"
                      SelectedItem="{Binding MetodoPagoSeleccionado}"
                      DisplayMemberPath="Descripcion"
                      materialDesign:HintAssist.Hint="Método de Pago"
                      Style="{StaticResource AppComboBoxStyle}"/>
        </Grid>

        <Border Grid.Row="1" Margin="0,20,0,0" Padding="15" BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <TextBox x:Name="ItemSearchTextBox"
                             Text="{Binding TextoBusquedaItem, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="White"
                             FontFamily="{StaticResource Font.SourceSans3}"
                             FontSize="16"
                             materialDesign:HintAssist.Hint="Buscar Producto o Servicio por Nombre u OEM"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                    <Popup IsOpen="{Binding IsProductPopupOpen}" PlacementTarget="{Binding ElementName=ItemSearchTextBox}" StaysOpen="False">
                        <ListBox ItemsSource="{Binding ResultadosBusquedaItem}" SelectedItem="{Binding ItemSeleccionado}" MaxHeight="200">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Nombre}"/>
                                        <Run Text="{Binding OriginalEquipamentManufacture, StringFormat=' (OEM: {0})'}" Foreground="Gray"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Popup>
                </Grid>

                <TextBox Grid.Column="1" Text="{Binding CantidadItem, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Cantidad"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Foreground="White"
                         FontFamily="{StaticResource Font.SourceSans3}"
                         FontSize="16"
                         Width="80" TextAlignment="Center" Margin="0,0,15,0"/>

                <Button Grid.Column="2" Content="Añadir" Command="{Binding AgregarItemCommand}"
                        Style="{StaticResource ElegantShadowGhostButton}"
                        Tag="{StaticResource Brush.Menu.YellowGold}"
                        CommandParameter="{Binding ItemSeleccionado}" IsDefault="True"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="0,15,0,0" CornerRadius="10" Background="{StaticResource Brush.Brand.CharcoalLight}" BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1.2">
            <DataGrid ItemsSource="{Binding LineasDeFactura}" Style="{StaticResource AppDataGridStyle}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                    <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C}" Width="*"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotalLinea, StringFormat=C}" Width="*" FontWeight="Bold"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.EliminarItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                        CommandParameter="{Binding}" ToolTip="Quitar Ítem">
                                    <materialDesign:PackIcon Kind="DeleteOutline" Foreground="{StaticResource Brush.Accent.DestructiveRed}"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="3" Margin="0,15,5,0">
            <StackPanel HorizontalAlignment="Right">
                <TextBlock Text="{Binding SubTotal, StringFormat='Subtotal: {0:C}'}" FontSize="16" Foreground="{StaticResource Text.Secondary}"/>
                <TextBlock Text="{Binding TotalIVA, StringFormat='IVA (19%): {0:C}'}" FontSize="16" Foreground="{StaticResource Text.Secondary}" Margin="0,5,0,0"/>
                <Separator Margin="0,8"/>
                <TextBlock Text="{Binding Total, StringFormat='TOTAL: {0:C}'}" FontSize="24" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancelar Venta" Command="{Binding CancelarVentaCommand}" IsCancel="True" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="FINALIZAR VENTA" Command="{Binding FinalizarVentaCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Margin="15,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl> 