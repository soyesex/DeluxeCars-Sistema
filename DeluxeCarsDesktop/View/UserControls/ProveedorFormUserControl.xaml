<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.ProveedorFormUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d"  
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Fila para los campos del formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para los botones de acción -->
        </Grid.RowDefinitions>

        <!-- Contenedor principal para las dos columnas de campos -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- === COLUMNA 1 === -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <Label Content="Razón Social:" Style="{StaticResource DarkLableForm}"/>
                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                        Text="{Binding RazonSocial, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="NIT:" Style="{StaticResource DarkLableForm}" Margin="0,15,0,0"/>
                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                        Text="{Binding NIT, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="Teléfono:" Style="{StaticResource DarkLableForm}" Margin="0,15,0,0"/>
                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                        Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- === COLUMNA 2 === -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                <Label Content="Correo Electrónico:" Style="{StaticResource DarkLableForm}"/>
                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="Departamento:" Style="{StaticResource DarkLableForm}" Margin="0,15,0,0"/>
                <ComboBox Style="{StaticResource ElegantComboBoxStyle}"
                        ItemsSource="{Binding Departamentos}"
                        SelectedItem="{Binding DepartamentoSeleccionado}"
                        DisplayMemberPath="Nombre"/>

                <Label Content="Municipio:" Style="{StaticResource DarkLableForm}" Margin="0,15,0,0"/>
                <ComboBox Style="{StaticResource ElegantComboBoxStyle}"
                        ItemsSource="{Binding Municipios}"
                        SelectedItem="{Binding MunicipioSeleccionado}"
                        DisplayMemberPath="Nombre"/>

                <CheckBox IsChecked="{Binding Estado}"
                        Content="Proveedor Activo"
                        Style="{StaticResource MaterialDesignCheckBox}"
                        Margin="5,25,0,0"
                        FontSize="16"
                        FontFamily="{StaticResource Font.Poppins}"
                        Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Botones de Acción en la parte inferior -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button Content="Cancelar" 
                Command="{Binding CancelarCommand}" 
                Style="{StaticResource ElegantShadowGhostButton}" 
                Tag="Gray" 
                IsCancel="True" 
                Margin="0,0,15,0"/>
            <Button Content="Guardar" 
                Command="{Binding GuardarCommand}" 
                IsDefault="True" 
                Style="{StaticResource ElegantShadowGhostButton}" 
                Tag="{StaticResource Brush.Menu.GreenForest}"/>
        </StackPanel>
    </Grid>
</UserControl>
