<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.ReportesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent"
             FontFamily="Montserrat"
             Foreground="#E0E6F1">

    <UserControl.Resources>
        <Style x:Key="ReportCardStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#1F2A44"/>
            <Setter Property="BorderBrush" Value="#4D5B7C"/>
            <Setter Property="Foreground" Value="#E0E6F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#28AEED"/>
                                <Setter TargetName="border" Property="Background" Value="#2C3A5A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00BFFF"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ReportCardStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Reportes"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <UniformGrid Grid.Row="1" Columns="3" Rows="2" VerticalAlignment="Center">
            <RadioButton Style="{StaticResource ReportCardStyle}" Margin="15" IsChecked="True">
                <StackPanel>
                    <TextBlock Text="Inventario Actual" Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Text="Visualice el stock actual de todos los productos." Style="{StaticResource CardDescriptionStyle}"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource ReportCardStyle}" Margin="15">
                <StackPanel>
                    <TextBlock Text="Productos sin Movimiento" Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Text="Identifique productos que no se han vendido en un período." Style="{StaticResource CardDescriptionStyle}"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource ReportCardStyle}" Margin="15">
                <StackPanel>
                    <TextBlock Text="Histórico Facturación" Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Text="Consulte el historial completo de facturas emitidas." Style="{StaticResource CardDescriptionStyle}"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource ReportCardStyle}" Margin="15">
                <StackPanel>
                    <TextBlock Text="Ventas por Cliente" Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Text="Analice el total de ventas para cada cliente." Style="{StaticResource CardDescriptionStyle}"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource ReportCardStyle}" Margin="15">
                <StackPanel>
                    <TextBlock Text="Compras a Proveedores" Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Text="Revise el historial de compras realizadas a proveedores." Style="{StaticResource CardDescriptionStyle}"/>
                </StackPanel>
            </RadioButton>
        </UniformGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Exportar Excel"  Margin="0,0,20,0"/>
            <Button Content="Exportar PDF" />
        </StackPanel>
    </Grid>
</UserControl>