@model IEnumerable<Aplicacion.Application.ViewModels.ProductoViewModel>
@{
    ViewData["Title"] = "Gestión de Inventario de Productos";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">@ViewData["Title"]</h1>
        <a asp-action="Crear" class="btn btn-primary" style="background-color: var(--color-primario); border-color: var(--color-primario);">
            <i class="bi bi-plus-circle-fill me-2"></i>Añadir Nuevo Producto
        </a>
    </div>

    <div class="card order-details-card p-4">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 5%;"></th>
                        <th>Nombre del Producto</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@item.ImagenUrl" style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px;" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                            </td>
                            <td>
                                <strong>@item.Nombre</strong><br>
                                <small class="text-muted">OEM: @item.OriginalEquipmentManufacture</small>
                            </td>
                            <td>@item.NombreCategoria</td>
                            <td class="text-end">@item.Precio.ToString("C")</td>
                            <td class="text-center">
                                @{
                                    var stockClass = item.Stock > 20 ? "bg-success" : (item.Stock > 0 ? "bg-warning" : "bg-danger");
                                }
                                <span class="badge @stockClass">@item.Stock</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
