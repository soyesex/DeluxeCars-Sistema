<Window x:Class="DeluxeCarsDesktop.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeluxeCarsDesktop.View"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:DeluxeCarsDesktop.ViewModel"
        xmlns:customcontrols="clr-namespace:DeluxeCarsDesktop.CustomControls"
        Title="Inicio de sesión" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True" 
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="C:\Users\suare\Source\Repos\DeluxeCarsUI\DeluxeCarsDesktop\Images\login.jpg"/>
        </Border.Background>

        <Border CornerRadius="12"
            BorderThickness="3">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Color.Aggressive.DeepBlue}" Offset="0"/>
                    <GradientStop Color="{StaticResource Color.Aggressive.RacingRed}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource Color.Aggressive.DeepBlue}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0" Opacity="0.75">
                    <GradientStop Color="{StaticResource Color.PrimaryBack1}" Offset="0"/>
                    <GradientStop Color="{StaticResource Color.PrimaryBack2}" Offset="0.65"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Inicio de sesión"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontFamily="{StaticResource Font.SourceSans3}"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource Brush.Aggressive.DeepBlue}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Brush.Aggressive.DarkerBlue}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="10"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource Brush.Aggressive.RacingRed}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="19" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="250"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="272,0,272,0">

                    <!--<Image Source="C:\Users\suare\Source\Repos\DeluxeCarsUI\DeluxeCarsDesktop\Images\deluxeCarsLogo.jpg"
                           Width="100" Height="100"/>-->

                    <TextBlock Text=" DELUXE CARS"
                               Foreground="White"
                               FontSize="35"
                               Style="{StaticResource H1TextStyle}" 
                            HorizontalAlignment="Center"
                               Margin="0 50 0 50"/>

                    <TextBlock Text="Autopartes de lujo, potencia sin límites."
                               Foreground="LightGray"
                               FontSize="16"
                                FontWeight="Regular"
                                Style="{StaticResource SecondaryTextStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,0"/>

                    <TextBlock Text="Correo electronico"
                               Foreground="DarkGray"
                               FontSize="15"
                               FontWeight="Medium"
                               Style="{StaticResource SecondaryTextStyle}"
                               Margin="0,30,0,0"/>

                    <TextBox x:Name="txtUser"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             FontWeight="Medium"
                            FontFamily="{StaticResource Font.SourceSans3}"
                             Background="Transparent"
                             Foreground="DarkGray"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0">
                    </TextBox>

                    <TextBlock Text="Contraseña"
                               Foreground="DarkGray"
                              FontSize="15"
                                FontWeight="Medium"
                                Style="{StaticResource SecondaryTextStyle}"
                               Margin="0,10,0,0"/>

                    <customcontrols:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Height="28"
                                    Margin="0,5,0,0">
                    </customcontrols:BindablePasswordBox>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#D7596D"
                                FontSize="15"
                               FontWeight="Medium"
                               Style="{StaticResource SecondaryTextStyle}"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>

                    <Button x:Name="btnLogin"
                            Command="{Binding LoginCommand}"
                            BorderThickness="0"
                            Content="INGRESAR"
                            Foreground="White"
                             FontSize="15"
                            FontWeight="Bold"
                            FontFamily="{StaticResource Font.SourceSans3}"
                            Cursor="Hand"
                            VerticalContentAlignment="Center"
                            Grid.Column="2"
                            Margin="0,10,0,0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource Brush.Aggressive.DeepBlue}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Brush.Aggressive.RacingRed}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="25"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">

                        <Button Content="Registrarse" 
                                Command="{Binding ShowRegisterViewCommand}"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="SemiBold"
                                FontFamily="{StaticResource Font.SourceSans3}"
                                Cursor="Hand"
                                Grid.Column="2"
                                Margin="0,10,0,5">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.Aggressive.RacingRed}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" Height="25"
                                            CornerRadius="10"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnRecoverPassword"
                                Command="{Binding RecoverPasswordCommand}"
                                Content="Recuperar contraseña"
                                Foreground="White"
                                 FontSize="15"
                                FontWeight="SemiBold"
                                FontFamily="{StaticResource Font.SourceSans3}"
                                Cursor="Hand"
                                Grid.Column="2"
                                Margin="0,5,0,5">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.Aggressive.RacingRed}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" Height="25"
                                            CornerRadius="10"
                                            Background="{TemplateBinding Background}">      
                                        <ContentPresenter VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>

                </StackPanel>

            </Grid>

        </Border>
    </Border>
</Window>
