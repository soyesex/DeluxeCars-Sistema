<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.GestionarProductosProveedorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             MinWidth="950" MaxWidth="1200">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="10" Background="{StaticResource PrimaryBackgroundColor}" 
                BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="{Binding ProveedorActual.RazonSocial, StringFormat='Catálogo de {0}', FallbackValue='Catálogo del Proveedor'}" 
                           FontSize="16" FontWeight="Bold" Margin="10,10,10,5"/>

                <DataGrid ItemsSource="{Binding ProductosAsociados}" 
                          SelectedItem="{Binding ProductoAsociadoSeleccionado}" 
                          Style="{StaticResource ElegantDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre Producto" Binding="{Binding Nombre}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Precio de Compra:" Style="{StaticResource DarkLableForm}" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="1" Text="{Binding NuevoPrecioCompra, UpdateSourceTrigger=PropertyChanged}" 
                     Width="120" TextAlignment="Center" Style="{StaticResource DarkInputControlStyle}"/>

            <Button Grid.Row="2" Command="{Binding AsociarCommand}" 
                    Style="{StaticResource DarkActionButtonStyle}" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&lt;&lt; Añadir"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="4" Command="{Binding DesasociarCommand}" 
                    Style="{StaticResource DarkActionButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Quitar &gt;&gt;"/>
                </StackPanel>
            </Button>
        </Grid>

        <Border Grid.Column="2" CornerRadius="10" Background="{StaticResource PrimaryBackgroundColor}" 
                BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Inventario General (Disponibles)" FontSize="16" FontWeight="Bold" Margin="10,10,10,5"/>

                <DataGrid ItemsSource="{Binding ProductosNoAsociados}" 
                          SelectedItem="{Binding ProductoNoAsociadoSeleccionado}"
                          Style="{StaticResource ElegantDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre Producto" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl> 