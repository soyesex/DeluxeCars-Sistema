@section Scripts {
    @if (User.IsInRole("Administrador"))
    {
        <script>
            // 
            // FUNCIÓN AUXILIAR PARA MOSTRAR NOTIFICACIONES "TOAST"
            // 
            function showToast(message, isError = false) {
                const toastContainer = document.querySelector('.toast-container');
                if (!toastContainer) return;

                const toastId = 'toast-' + Math.random().toString(36).substr(2, 9);
                const toastHTML = `
                                <div id="${toastId}" class="toast align-items-center text-white ${isError ? 'bg-danger' : 'bg-success'}" role="alert" aria-live="assertive" aria-atomic="true">
                                    <div class="d-flex">
                                        <div class="toast-body">${message}</div>
                                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                    </div>
                                </div>`;

                toastContainer.insertAdjacentHTML('beforeend', toastHTML);

                const toastElement = document.getElementById(toastId);
                const toast = new bootstrap.Toast(toastElement, { delay: 3000 });
                toast.show();
                // Limpiar el toast del DOM después de que se oculte
                toastElement.addEventListener('hidden.bs.toast', () => toastElement.remove());
            }


            // 
            // LÓGICA PRINCIPAL DE EDICIÓN CON MODAL
            // 
            function initializeEditModal() {
                const modalElement = document.getElementById('editTextModal');
                if (!modalElement) return;

                if (typeof bootstrap === 'undefined' || typeof bootstrap.Modal === 'undefined') {
                    setTimeout(initializeEditModal, 100);
                    return;
                }

                const editModal = new bootstrap.Modal(modalElement);
                const contentKeyInput = document.getElementById('contentKey');
                const contentTextInput = document.getElementById('contentText');
                const saveButton = document.getElementById('saveContentBtn');

                // Asignar el evento a todos los botones de edición
                document.querySelectorAll('.btn-edit-content').forEach(button => {
                    button.addEventListener('click', function (e) {
                        e.stopPropagation(); // Prevenir eventos conflictivos
                        const container = this.closest('.editable-container');
                        const elementToEdit = container.querySelector('[data-key]');
                        const key = elementToEdit.dataset.key;
                        // MEJORA: Usamos innerHTML para capturar saltos de línea (<br>) y otras etiquetas
                        const currentContent = elementToEdit.innerHTML;

                        contentKeyInput.value = key;
                        // Reemplazamos <br> por saltos de línea reales en el textarea
                        contentTextInput.value = currentContent.replace(/<br\s*\/?>/gi, '\n');
                        editModal.show();
                    });
                });

                // Asignar el evento al botón de Guardar
                saveButton.addEventListener('click', function () {
                    this.disabled = true;
                    const key = contentKeyInput.value;
                    // MEJORA: Al guardar, reemplazamos saltos de línea por <br> para conservar el formato en HTML
                    const value = contentTextInput.value.replace(/\n/g, '<br>');

                    fetch('/ContentAdmin/Update', { // Asegúrate que esta URL sea la correcta
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ key: key, value: value })
                    })
                        .then(response => {
                            if (!response.ok) throw new Error('La respuesta del servidor no fue exitosa.');
                            return response.json();
                        })
                        .then(data => {
                            if (data.success) {
                                editModal.hide();

                                // =============================================================
                                // MEJORA CLAVE: Actualización dinámica sin recargar la página
                                // =============================================================
                                const elementToUpdate = document.querySelector(`[data-key="${key}"]`);
                                if (elementToUpdate) {
                                    elementToUpdate.innerHTML = value; // Actualizamos el contenido en la página
                                }
                                showToast('Contenido guardado con éxito.'); // Feedback visual

                            } else {
                                showToast(data.message || 'Error al guardar el contenido.', true);
                            }
                        })
                        .catch(error => {
                            console.error('Error en la petición Fetch:', error);
