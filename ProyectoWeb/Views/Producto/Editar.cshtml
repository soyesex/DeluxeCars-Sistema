@model Aplicacion.Application.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h1 class="h2">@ViewData["Title"]: @Model.Nombre</h1>
<p class="text-muted">Modifica los detalles del producto seleccionado.</p>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Campos del formulario (idénticos a los de Crear.cshtml) -->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="OriginalEquipmentManufacture" class="form-label">OEM</label>
                    <input asp-for="OriginalEquipmentManufacture" class="form-control" />
                    <span asp-validation-for="OriginalEquipmentManufacture" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="IdCategoria" class="form-label">Categoría</label>
                    <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.Categorias"></select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" type="number" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImagenUrl" class="form-label"></label>
                <input asp-for="ImagenUrl" class="form-control" />
                <span asp-validation-for="ImagenUrl" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}