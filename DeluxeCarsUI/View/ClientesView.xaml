<UserControl x:Class="DeluxeCarsUI.View.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsUI.View"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <UserControl.Resources>
        <!-- Converters & Brushes -->
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <SolidColorBrush x:Key="PlaceholderBrush" Color="#b0b9c6" />

        <!-- Column Header Style -->
        <Style x:Key="NoHoverColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5,20,20,15" MinWidth="1200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SEARCH AREA -->
            <Border Grid.Column="0" Margin="0,0,20,0"
                    CornerRadius="14" Background="White" BorderBrush="#ced4da" BorderThickness="1" Padding="0">
                <Grid>
                    <!-- TextBox -->
                    <TextBox x:Name="txtSearch"
                             Padding="10,6,35,6"
                             FontFamily="Montserrat"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="#343a40" />

                    <!-- Placeholder -->
                    <TextBlock Text="Buscar clientes..."
                               FontFamily="Montserrat"
                               FontSize="14"
                               Foreground="{StaticResource PlaceholderBrush}"
                               IsHitTestVisible="False"
                               Margin="10,6,0,6"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text.Length, ElementName=txtSearch}" Value="0" />
                                            <Condition Binding="{Binding IsFocused, ElementName=txtSearch}" Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Search Icon -->
                    <fa:IconImage Icon="MagnifyingGlass"
                                  Width="16"
                                  Height="16"
                                  Foreground="{StaticResource PlaceholderBrush}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,12,0" />
                </Grid>
            </Border>

            <Grid Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <!-- Ver Productos Button -->
                <Button Grid.Column="0"
                        Width="120"
                        Height="30"
                        Content="Ver Productos"
                        FontFamily="Montserrat"
                        FontWeight="Normal"
                        Foreground="{StaticResource color3}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="15" Background="{StaticResource color1}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Grid.Column="1" Width="100">
                    
                </StackPanel>
                <!-- Filtro ComboBox -->
                <ComboBox Grid.Column="2"
                          x:Name="cbxFiltroCategoria"
                          Width="100"
                          Height="30"
                          Margin="0,0,0,0"
                          FontFamily="Montserrat"
                          FontSize="14"
                          Background="White"
                          Foreground="#343a40"
                          Padding="10,2"
                          HorizontalContentAlignment="Left"
                          VerticalContentAlignment="Center"
                          BorderBrush="#ced4da"
                          BorderThickness="1"
                          SelectedIndex="0">
                    <ComboBox.Resources>
                        <!-- Cambiar color del fondo al pasar el mouse -->
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f1f3f5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                    <!-- Opciones de ejemplo -->
                    <ComboBoxItem Content="Todos" />
                    <ComboBoxItem Content="Motor" />
                    <ComboBoxItem Content="Suspensión" />
                    <ComboBoxItem Content="Frenos" />
                    <ComboBoxItem Content="Accesorios" />
                </ComboBox>

            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <!-- Título -->
            <TextBlock Text="Clientes"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Normal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <Border Grid.Row="2">
            <DataGrid x:Name="RolesDataGrid"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding ListaDeRoles}"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
