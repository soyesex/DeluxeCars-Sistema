<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.CatalogoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:DeluxeCarsDesktop.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             xmlns:viewModel="clr-namespace:DeluxeCarsDesktop.ViewModel"
             mc:Ignorable="d"  
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="154*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchBoxStyle}"
                         MinWidth="300" MaxWidth="500"
                         Tag="Buscar por N° Factura o Cliente..."/>

                <ComboBox ItemsSource="{Binding CategoriasDisponibles}"
                            SelectedItem="{Binding CategoriaFiltroSeleccionada}"
                            Style="{DynamicResource MaterialDesignComboBox}"
                            Foreground="{StaticResource Text.Secondary}"
                            FontFamily="{StaticResource Font.SourceSans3}"
                            FontWeight="Medium"
                            FontSize="16"
                            BorderBrush="{DynamicResource Background.Disabled}"
                            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Brush.Menu.BlueCornflower}"
                            DisplayMemberPath="Nombre"
                            Width="180" Margin="70 0 30 0"/>

                <ComboBox ItemsSource="{Binding StockStatusOptions}" 
                            SelectedItem="{Binding StockStatusFiltroSeleccionado}" 
                            Style="{DynamicResource MaterialDesignComboBox}"
                            Foreground="{StaticResource Text.Secondary}"
                            FontFamily="{StaticResource Font.SourceSans3}"
                            FontWeight="Medium"
                            FontSize="16"
                            BorderBrush="{DynamicResource Background.Disabled}"
                            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Brush.Menu.BlueCornflower}"
                            Width="120" Margin="55 0 0 0"/>

                <Button Command="{Binding LimpiarFiltrosCommand}"
                        Margin="50 0"
                        Style="{StaticResource controlButton}"
                        Tag="{StaticResource color4}"
                        ToolTip="Limpiar Filtros">

                    <fa:IconImage Icon="Eraser" Width="15" Height="15" Style="{StaticResource controlButtonIcon}"/>

                </Button>
            </StackPanel>


        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button Content="Ajuste Manual"
                Style="{StaticResource ElegantShadowGhostButton}"
                Tag="{StaticResource Brush.Menu.YellowGold}"
                Command="{Binding AjusteManualCommand}" Margin="40,0,40,0"/>

            <Button Content="Nuevo Producto"
                Style="{StaticResource ElegantShadowGhostButton}"
                Tag="{StaticResource Brush.Menu.GreenForest}"
                Command="{Binding NuevoProductoCommand}" Margin="40,0,40,0"/>

            <Button Content="Editar"
                Style="{StaticResource ElegantShadowGhostButton}"
                Tag="{StaticResource Brush.Menu.BlueSteel}"
                Command="{Binding EditarProductoCommand}" Margin="40,0,40,0"/>

            <Button Content="{Binding CambiarEstadoButtonText}"
                Style="{StaticResource ElegantShadowGhostButton}"
                Tag="{StaticResource Brush.Accent.DestructiveRed}"
                MinWidth="120"
                Command="{Binding CambiarEstadoProductoCommand}" Margin="40,0,40,0"/>
        </StackPanel>

