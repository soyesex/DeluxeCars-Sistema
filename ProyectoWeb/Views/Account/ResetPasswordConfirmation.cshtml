@{
    Layout = null; ViewData["Title"] = "Contraseña Restablecida";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deluxe Cars</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --color-primario: #d90429;
            --color-texto-principal: #f5f5f7;
            --color-texto-secundario: #a8a8a8;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-image: linear-gradient(rgba(18, 18, 18, 0.85), rgba(18, 18, 18, 0.95)), url('/images/hero-main-bg.jpg');
            background-size: cover;
            background-position: center;
            padding: 2rem;
        }

        .login-card {
            max-width: 450px;
            width: 100%;
            background: rgba(30, 30, 30, 0.75);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1.5rem;
            padding: 2.5rem;
            color: var(--color-texto-principal);
            box-shadow: 0 20px 50px rgba(0,0,0,0.3);
        }

            .login-card h2 {
                font-weight: 800;
            }

            .login-card .form-floating > .form-control {
                background-color: rgba(255, 255, 255, 0.05);
                border-color: rgba(255, 255, 255, 0.2);
                color: #fff;
            }

                .login-card .form-floating > .form-control:focus {
                    background-color: rgba(255, 255, 255, 0.1);
                    border-color: var(--color-primario);
                    box-shadow: none;
                }

            .login-card .form-floating > label {
                color: var(--color-texto-secundario);
            }

            .login-card .form-check-label {
                color: var(--color-texto-secundario);
            }

            .login-card .btn-primary {
                background-color: var(--color-primario);
                border: none;
                font-weight: 600;
                padding: 0.75rem;
                border-radius: 0.5rem;
                transition: background-color 0.2s ease;
            }

                .login-card .btn-primary:hover {
                    background-color: #b80322;
                }

            .login-card .small-links a {
                color: var(--color-texto-secundario);
                text-decoration: none;
                transition: color 0.2s ease;
            }

                .login-card .small-links a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card text-center">
            <h2 class="fw-bold">¡Éxito!</h2>
            <p class="text-white-50 mt-3">Tu contraseña ha sido restablecida. Ahora puedes iniciar sesión con tu nueva contraseña.</p>
            <div class="mt-4">
                <a asp-action="Login" class="btn btn-primary">Ir a Inicio de Sesión</a>
            </div>
        </div>
    </div>
</body>
</html>
