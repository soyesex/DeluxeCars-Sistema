<Window x:Class="DeluxeCarsUI.View.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeluxeCarsUI.View"
      xmlns:viewModel="clr-namespace:DeluxeCarsUI.ViewModel"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      Title="MainWindowView" Height="700" Width="1200"
      WindowStartupLocation="CenterScreen"
      WindowStyle="None"
      Background="Transparent"
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <local:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CatalogoViewModel}">
            <local:CatalogoView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ClientesViewModel}">
            <local:ClientesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ProveedorViewModel}">
            <local:ProveedorView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ComprasViewModel}">
            <local:ComprasView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:FacturacionViewModel}">
            <local:FacturacionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ReportesViewModel}">
            <local:ReportesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ConfiguracionViewModel}">
            <local:ConfiguracionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:UsuarioViewModel}">
            <local:UsuarioView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RolViewModel}">
            <local:RolView/>
        </DataTemplate>

    </Window.Resources>


        <Border CornerRadius="12"
    BorderThickness="3">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>

            <Grid.ColumnDefinitions>
                <!-- Navigation Menu -->
                <ColumnDefinition Width="250"/>
                <!-- Content Section -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secundaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secundaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                
                    <!-- Logo -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Images/logo.lux.png" Height="30"/>
                        <TextBlock Text="Deluxe Cars"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>

                    </StackPanel>

                    <!-- Scrollable Menu Buttons -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Style="{StaticResource CustomScrollViewer}">
                        <StackPanel>
                            <!-- Menu Buttons -->
                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Panel" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCatalogoViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="List" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Catálogo" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color4}"
                                 Command="{Binding ShowClienteViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Users" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Clientes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color5}"
                                 Command="{Binding ShowProveedorViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Wallet" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Proveedores" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowComprasViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ShoppingCart" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Compras" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color7}"
                                 Command="{Binding ShowFacturacionViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="FileInvoiceDollar" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Facturación" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton1}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowReportesViewCommand}"
                                 Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="FileAlt" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Reportes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    
                            <RadioButton Style="{StaticResource menuButton1}"
                                         Tag="{StaticResource color1}"
                                         IsChecked="True"
                                         Command="{Binding ShowRolViewCommand}"
                                         Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="CriticalRole" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Roles" Style="{StaticResource menuButtonText}"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton1}"
                                         Tag="{StaticResource color9}"
                                         Command="{Binding ShowConfiguracionViewCommand}"
                                         Margin="0,0,0,10"> 
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Tools" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Configuración" Style="{StaticResource menuButtonText}"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Main Section -->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>

                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="40"/>
                        <!--Content section / Child views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">
                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>

                        </Button>

                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>

                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>

                        </Button>

                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <fa:IconImage Icon="{Binding Icon}"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource titleColor2}"
                                          Margin="35,0,10,0"/>

                            <TextBlock Text="{Binding Caption}"
                                       Foreground="{StaticResource titleColor2}"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--User options-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            
                            <Button x:Name="btnOpciones"
                                    Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color1}"
                                    Click="btnOpciones_Click">
                                
                                <fa:IconImage Icon="AngleDown" 
                                     Width="12" Height="12"
                                     Style="{StaticResource iconButtonIcon}"/>     
                                
                                <Button.ContextMenu>
                                    <ContextMenu Placement="Bottom" VerticalOffset="2">
                                        <MenuItem Header="Cerrar sesión"
                                                  Command="{Binding LogoutCommand}"
                                                  Style="{StaticResource menuItemBotton}">
                                            
                                        </MenuItem>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                
                            </Button>

                            <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                                       Foreground="{StaticResource titleColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <Ellipse Height="25" Width="25"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0" Cursor="Hand">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/user.png"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color3}">
                                <fa:IconImage Icon="Clock" Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color4}">
                                <fa:IconImage Icon="Envelope" Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color5}">
                                <fa:IconImage Icon="Bell" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--Content section / Child views-->
                    <ContentControl Content="{Binding CurrentChildView}"
                                    Grid.Row="2"
                                    Margin="25 10"/>
                </Grid>
            </Border>

        </Grid>

    </Border>

</Window>
