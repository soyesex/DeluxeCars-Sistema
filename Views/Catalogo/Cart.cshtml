@model List<Aplicacion.Application.ViewModels.ProductoViewModel>

@{
    ViewData["Title"] = "Deluxe Cars";
}

<!-- Sección de catálogo de productos -->
<div class="container mt-5 pt-5">
    <h1 class="text-center mb-4">Catálogo de Autopartes - DeluxeCars</h1>
    <div class="row" id="product-catalog"></div>
</div>

<!-- Carrito de compras -->
<div id="cart" class="slide-cart">
    <div class="cart-header d-flex justify-content-between p-3 bg-dark text-white">
        <h4>Carrito de Compras</h4>
        <button class="btn-close text-white" onclick="toggleCart()"></button>
    </div>
    <ul id="cart-items" class="list-group list-group-flush"></ul>
    <div class="cart-footer p-3 bg-dark text-white d-flex justify-content-between">
        <p>Total: $<span id="cart-total">0</span></p>
        <form asp-controller="Pedidos" asp-action="Confirmar" method="post">
            <input type="hidden" name="cartItems" id="cartItemsInput" />
            <button type="submit" class="btn btn-primary" onclick="prepareCartData()">Finalizar Compra</button>
        </form>
    </div>
</div>

<!-- Botón para abrir el carrito -->
<button class="cart-btn" onclick="toggleCart()">🛒</button>

<!-- Incluir jQuery y Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/script.js"></script>