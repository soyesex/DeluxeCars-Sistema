<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.CategoriaFormUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Acciones (Búsqueda y Botones) -->
            <RowDefinition Height="*" />
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Panel de Acciones -->
        <Grid Grid.Row="0" Margin="5,5,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Espacio para la búsqueda -->
                <ColumnDefinition Width="Auto" />
                <!-- Espacio para los botones -->
            </Grid.ColumnDefinitions>

            <!-- CONEXIÓN 1: Enlazamos el TextBox al SearchText del ViewModel -->
            <TextBox Grid.Column="0" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Style="{StaticResource SearchBoxStyle}" 
                     Tag="Buscar categoria..." />

            <!-- CONEXIÓN 2: Enlazamos los botones a los Comandos del ViewModel -->
            <StackPanel Orientation="Horizontal" Grid.Column="1"
                        HorizontalAlignment="Right">
                
                <Button Content="Añadir"
                        Command="{Binding NuevaCategoriaCommand}"
                        Style="{StaticResource DarkActionButtonStyle}" 
                        Margin="10,0,10,0"/>

                <Button Content="Editar" 
                        Command="{Binding EditarCategoriaCommand}"
                        Style="{StaticResource DarkActionButtonStyle}" 
                        Margin="5,0,10,0"/>

                <Button Content="Eliminar" 
                        Command="{Binding EliminarCategoriaCommand}"
                        Style="{StaticResource DarkActionButtonStyle}" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- CONEXIÓN 3: Enlazamos el DataGrid a la lista y al item seleccionado del ViewModel -->
        <Border Grid.Row="1" CornerRadius="10" Background="{StaticResource PrimaryBackgroundColor}" 
                BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1">


            <DataGrid x:Name="CategoriasDataGrid"
                ItemsSource="{Binding Categorias}" 
                      Style="{StaticResource ElegantDataGridStyle}"
                      SelectedItem="{Binding CategoriaSeleccionada}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
