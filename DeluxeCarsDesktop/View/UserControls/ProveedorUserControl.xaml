 <UserControl x:Class="DeluxeCarsDesktop.View.UserControls.ProveedorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="WhiteHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontFamily" Value="{DynamicResource Font.Poppins}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="CustomDataGridCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{StaticResource Brush.Brand.GraySteel}" />
            <Setter Property="FontFamily" Value="{DynamicResource Font.Poppins}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Accent.VibrantBlue.Transparent}"/>
                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGridRow}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
     
        <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Margin="0,10,0,30" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0">
                <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource SearchBoxStyle}" VerticalAlignment="Center"
                        MinWidth="300" MaxWidth="500" Width="340"
                         Tag="Buscar por Razón Social..."/>

                <ComboBox Grid.Column="1" ItemsSource="{Binding Departamentos}"
                          SelectedItem="{Binding DepartamentoFiltro}"
                          DisplayMemberPath="Nombre" 
                          Style="{StaticResource ElegantComboBoxStyle}"
                          FontFamily="{StaticResource Font.Poppins}"
                          Tag="{StaticResource Border.Default}"
                          Width="180" Margin="50 0 30 0" VerticalAlignment="Center"/>

                <ComboBox Grid.Column="2" ItemsSource="{Binding MunicipiosDisponibles}"
                          SelectedItem="{Binding MunicipioFiltro}"
                          DisplayMemberPath="Nombre" 
                          Style="{StaticResource ElegantComboBoxStyle}"
                          FontFamily="{StaticResource Font.Poppins}"
                          Tag="{StaticResource Border.Default}"
                          Width="200" Margin="0" VerticalAlignment="Center"/>

                <Button Grid.Column="3" Command="{Binding LimpiarFiltrosCommand}"
                        Margin="25 0 0 0"
                        Style="{StaticResource controlButton}"
                        Tag="{StaticResource color4}"
                        ToolTip="Limpiar Filtros">

                    <fa:IconImage Icon="Trash" Width="20" Height="20" Style="{StaticResource controlButtonIcon}"/>

                </Button>
            </StackPanel>
            
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="20,0,0,30">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Nuevo Proveedor" Grid.Column="0" Command="{Binding NuevoProveedorCommand}" 
                     Style="{StaticResource ElegantShadowGhostButton}"
                    Tag="{StaticResource Brush.Menu.GreenForest}"
                    Margin="20,0,0,0" VerticalAlignment="Center" Width="Auto" Padding="15,0"/>

            <Button Grid.Column="1" Content="Gestionar Catálogo" 
                        Style="{StaticResource ElegantShadowGhostButton}"
                        Tag="{StaticResource Brush.Menu.YellowGold}"
                        Margin="40,0,0,0"
                        Command="{Binding GestionarProductosCommand}" />

            <Button Content="Editar" Grid.Column="2" Command="{Binding EditarProveedorCommand}"
                    Style="{StaticResource ElegantShadowGhostButton}"
                    Tag="{StaticResource Brush.Menu.BlueSteel}"
                    Margin="40,0,0,0" VerticalAlignment="Center" Width="Auto" Padding="15,0"/>

            <Button Content="Activar/Desactivar" Grid.Column="3" Command="{Binding ToggleEstadoCommand}" 
                        Style="{StaticResource ElegantShadowGhostButton}"
                        Tag="{StaticResource Brush.Accent.DestructiveRed}"
                        Margin="40,0,20,0" VerticalAlignment="Center" Width="Auto" Padding="15,0"/>
        </Grid>

        <Border Grid.Row="2" Margin="10 0 10 10"  CornerRadius="10"  Background="{StaticResource Brush.Brand.CharcoalLight}" 
  BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1.2">

            <DataGrid ItemsSource="{Binding Proveedores}"
                      SelectedItem="{Binding ProveedorSeleccionado}"
                      Style="{StaticResource AppDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource WhiteHeaderStyle}" 
                      CellStyle="{StaticResource CustomDataGridCellStyle}"
                      CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" Width="2*"/>
                    <DataGridTextColumn Header="NIT" Binding="{Binding NIT}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="*"/>
                    <DataGridTextColumn Header="Ubicación" Binding="{Binding Municipio.Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Departamento" Binding="{Binding Municipio.Departamento.Nombre}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
