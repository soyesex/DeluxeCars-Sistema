<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.ClienteFormUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             xmlns:converters="clr-namespace:DeluxeCarsDesktop.Converters"
             xmlns:behaviors="clr-namespace:DeluxeCarsDesktop.Behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="600" d:DesignWidth="800" MinWidth="750" MinHeight="450">

    <!-- 
    NOTA GENERAL:
    - Se usa un Grid principal con 2 filas: una para el formulario y otra para los botones.
    - El formulario se divide en un Grid de 2 columnas para una distribución equilibrada.
    - Se eliminan los <Label> y se usa 'materialDesign:HintAssist.Hint' para un diseño más limpio y moderno.
    - Se aplica un margen inferior a cada control para un espaciado consistente.
    -->

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Fila para los campos del formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para los botones de acción -->
        </Grid.RowDefinitions>

        <!-- Contenedor del formulario con dos columnas proporcionales -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- === COLUMNA 1 === -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Nombre del Cliente"
                         Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,15"/>

                <ComboBox Style="{StaticResource ElegantComboBoxStyle}"
                          materialDesign:HintAssist.Hint="Tipo de Cliente"
                          ItemsSource="{Binding TiposClienteDisponibles}"
                          SelectedItem="{Binding TipoCliente, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,0,0,15"/>

                <ComboBox Style="{StaticResource ElegantComboBoxStyle}"
                          materialDesign:HintAssist.Hint="Tipo de Identificación"
                          ItemsSource="{Binding TiposIdentificacionDisponibles}"
                          SelectedItem="{Binding TipoIdentificacion, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,0,0,15"/>

                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Número de Identificación"
                         Text="{Binding Identificacion, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,15"/>

                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Teléfono"
                         Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>

            <!-- === COLUMNA 2 === -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">

                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Correo Electrónico"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,15"/>

                <TextBox Style="{StaticResource ElegantTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Dirección"
                         Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}"
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         Margin="0,0,0,15"/>

                <ComboBox Style="{StaticResource ElegantComboBoxStyle}"
                          materialDesign:HintAssist.Hint="Ciudad"
                          ItemsSource="{Binding CiudadesDisponibles}"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding IdCiudad, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,0,0,15"/>

                <CheckBox IsChecked="{Binding Estado}"
                          Content="Cliente Activo"
                          FontSize="16"
                          FontFamily="{StaticResource Font.Poppins}"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Margin="5,15,0,0"
                          Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Panel de botones de acción -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,30,0,0">

            <Button Content="Cancelar" 
                    Command="{Binding CancelarCommand}" 
                    Style="{StaticResource ElegantShadowGhostButton}" 
                    Tag="Gray" 
                    IsCancel="True" 
                    Margin="0,0,15,0"/>

            <Button Content="Guardar" 
                    Command="{Binding GuardarCommand}" 
                    IsDefault="True" 
                    Style="{StaticResource ElegantShadowGhostButton}" 
                    Tag="{StaticResource Brush.Menu.GreenForest}"/>
        </StackPanel>
    </Grid>
</UserControl>