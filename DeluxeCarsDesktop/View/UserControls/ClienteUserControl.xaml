    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,10,0,30" HorizontalAlignment="Left">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource SearchBoxStyle}" 
                     behaviors:InputBehaviors.EnterEjecutaComando="{Binding AplicarFiltrosCommand}"
                     MinWidth="300" MaxWidth="500" Width="400" Tag="Buscar por Nombre, Email o Teléfono..."/>

            <ComboBox Grid.Column="1" ItemsSource="{Binding TiposCliente}"
                      SelectedItem="{Binding TipoClienteSeleccionado}"
                      Style="{StaticResource ElegantComboBoxStyle}"
                      FontFamily="{StaticResource Font.Poppins}"
                      Tag="{StaticResource Border.Default}"
                      Margin="40,0,30,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AplicarFiltrosCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>

            <ComboBox Grid.Column="2" ItemsSource="{Binding CiudadesDisponibles}"
                      SelectedItem="{Binding CiudadSeleccionada}"
                      DisplayMemberPath="Nombre"
                      Style="{StaticResource ElegantComboBoxStyle}"
                      FontFamily="{StaticResource Font.Poppins}"
                      Tag="{StaticResource Border.Default}"
                      Width="200"
                      Margin="0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AplicarFiltrosCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>

            <Button Grid.Column="3" Command="{Binding LimpiarFiltrosCommand}"
                    Margin="25 0 0 0"
                    Style="{StaticResource controlButton}"
                    Tag="{StaticResource color4}"
                    ToolTip="Limpiar Filtros">

                <fa:IconImage Icon="Trash" Width="20" Height="20" Style="{StaticResource controlButtonIcon}"/>

            </Button>

        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Crear Factura" Grid.Column="0" Command="{Binding CrearFacturaCommand}" 
                    Style="{StaticResource ElegantShadowGhostButton}" Tag="{StaticResource Brush.Menu.YellowGold}" 
                    Margin="40,0"/>
            
            <Button Content="Añadir Cliente" Grid.Column="1" Command="{Binding NuevoClienteCommand}" 
                    Style="{StaticResource ElegantShadowGhostButton}" Tag="{StaticResource Brush.Menu.GreenForest}" 
                    Margin="20,0"/>

            <Button Content="Editar Cliente" Grid.Column="2" Command="{Binding EditarClienteCommand}"
                    Style="{StaticResource ElegantShadowGhostButton}" Tag="{StaticResource Brush.Menu.BlueSteel}" 
                    Margin="20,0"/>
            
            <Button Content="Activar/Desactivar" Grid.Column="3" Command="{Binding ToggleEstadoCommand}" 
                    Style="{StaticResource ElegantShadowGhostButton}" Tag="{StaticResource Brush.Accent.DestructiveRed}"
                    Margin="20,0,0,0"/>

        </Grid>
        
        <UniformGrid Grid.Row="2" Rows="1" Margin="10,10,0,30">
            <Border Style="{StaticResource KpiCardStyle}" Background="{DynamicResource Brush.Aggressive.DeepBlue}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Text="{Binding TotalItems}" Style="{StaticResource KpiValueStyle}"/>
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Total de Clientes" Style="{StaticResource KpiTitleStyle}"/>
                    </Grid>
                    <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="60" Height="60" CornerRadius="30"
                    Background="{StaticResource Brush.Menu.BlueCornflower}">
                            <fa:IconImage Icon="Users" Foreground="{StaticResource Brush.Neutral.WhitePure}" Width="30" Height="30"/>
                        </Border>
                    </Grid>

                </Grid>
            </Border>
            <Border Style="{StaticResource KpiCardStyle}" Background="{DynamicResource Brush.Menu.GreenDeep}"
        Tag="{StaticResource Brush.Menu.GreenForest}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Center" Grid.Row="0" Text="{Binding ClientesActivos}" Style="{StaticResource KpiValueStyle}"/>
                        <TextBlock Grid.Row="1" Text="Clientes Activos" Style="{StaticResource KpiTitleStyle}"/>
                    </Grid>

                    <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="60" Height="60" CornerRadius="30"
                    Background="{StaticResource Brush.Menu.GreenForest}">
                            <fa:IconImage Icon="UserCheck" Foreground="{StaticResource Brush.Neutral.WhitePure}" Width="30" Height="30"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}" Background="{DynamicResource  Brush.Accent.ActionPurpleDeep}"
        Tag="{StaticResource Brush.Accent.ActionPurple}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Center" Grid.Row="0" Text="{Binding NuevosClientesMes}" Style="{StaticResource KpiValueStyle}"/>
                        <TextBlock Grid.Row="1" Text="Nuevos este Mes" Style="{StaticResource KpiTitleStyle}"/>
                    </Grid>

                    <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="60" Height="60" CornerRadius="30"
                    Background="{StaticResource Brush.Accent.ActionPurple}">
                            <fa:IconImage Icon="UserPlus" Foreground="{StaticResource Brush.Neutral.WhitePure}" Width="30" Height="30"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </UniformGrid>

        <Border Grid.Row="3" CornerRadius="10" Background="{StaticResource Brush.Brand.CharcoalLight}" 
                BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1.2">
            <DataGrid ItemsSource="{Binding Clientes}" 
                      SelectedItem="{Binding ClienteSeleccionado}"
                      Style="{StaticResource AppDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource WhiteHeaderStyle}" 
                      CellStyle="{StaticResource CustomDataGridCellStyle}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre Completo" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="1.2*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.5*"/>
                    <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="4" Margin="0,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding TotalItems, StringFormat='Total: {0} clientes'}" 
                       FontSize="15"
                       FontFamily="{StaticResource Font.Poppins}" FontWeight="Medium"
                       VerticalAlignment="Center" Margin="20,0,0,0"
                       Foreground="{StaticResource Text.Secondary}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Command="{Binding IrAPaginaAnteriorCommand}" Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="ChevronLeft" Width="15" Height="15"/>
                </Button>

                <TextBlock VerticalAlignment="Center" FontSize="15" FontFamily="{StaticResource Font.Poppins}" FontWeight="Medium" Margin="10,0" Foreground="{StaticResource Text.Secondary}">
                    <Run Text="Página"/>
                    <Run Text="{Binding NumeroDePagina}"/>
                    <Run Text="de"/>
                    <Run Text="{Binding TotalPaginas, Mode=OneWay}"/>
                </TextBlock>

                <Button Command="{Binding IrAPaginaSiguienteCommand}" Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 
