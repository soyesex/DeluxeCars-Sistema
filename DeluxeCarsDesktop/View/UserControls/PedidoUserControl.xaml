<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.PedidoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Desde:" VerticalAlignment="Center" Style="{StaticResource DarkLableForm}"/>
            <DatePicker SelectedDate="{Binding FechaInicio}" Width="120" Margin="5,0,0,0" VerticalAlignment="Center"/>
 
            <Label Content="Hasta:" VerticalAlignment="Center" Margin="10,0,0,0" Style="{StaticResource DarkLableForm}"/>
            <DatePicker SelectedDate="{Binding FechaFin}" Width="120" Margin="5,0,0,0" VerticalAlignment="Center"/>

            <Label Content="Proveedor:" VerticalAlignment="Center" Margin="10,0,0,0" Style="{StaticResource DarkLableForm}"/>
            <ComboBox ItemsSource="{Binding Proveedores}"
                      SelectedItem="{Binding ProveedorFiltro}"
                      DisplayMemberPath="RazonSocial"
                      Style="{StaticResource DarkComboBoxStyle}"
                      Width="200" Margin="5,0,0,0" VerticalAlignment="Center"/>

            <Button Content="Filtrar" Command="{Binding FiltrarCommand}"          
                    Style="{StaticResource DarkActionButtonStyle}"
                    Margin="10,0,0,0" VerticalAlignment="Center"/>

            <Button Content="Nuevo Pedido" Command="{Binding NuevoPedidoCommand}" 
                    Style="{StaticResource DarkActionButtonStyle}"
                    Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="0 0 10 0" CornerRadius="10" Background="{StaticResource PrimaryBackgroundColor}" 
                BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1">

            <DataGrid ItemsSource="{Binding Pedidos}"
                      SelectedItem="{Binding PedidoSeleccionado}"
                      Style="{StaticResource ElegantDataGridStyle}"
                      CanUserAddRows="False" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="N° Pedido" Binding="{Binding NumeroPedido}" Width="*"/>
                    <DataGridTextColumn Header="Fecha Emisión" Binding="{Binding FechaEmision, StringFormat=d}" Width="Auto"/>
                    <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor.RazonSocial}" Width="2*"/>
                    <DataGridTextColumn Header="Plazo Entrega" Binding="{Binding PlazoEntrega, StringFormat=d}" Width="Auto"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario.Nombre}" Width="*"/>
                    <DataGridTemplateColumn Header="Acciones">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ver Detalles" 
                                        Style="{StaticResource DarkActionButtonStyle}"
                                        Command="{Binding DataContext.VerDetallesCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
