@model Aplicacion.Application.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Ingresar";
    Layout = null; // Esta página no usará el layout principal
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deluxe Cars</title>

    <!-- Librerías de Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Estilos Personalizados para la Página de Login -->
    <style>
        :root {
            --color-primario: #d90429;
            --color-texto-principal: #f5f5f7;
            --color-texto-secundario: #a8a8a8;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-image: linear-gradient(rgba(18, 18, 18, 0.85), rgba(18, 18, 18, 0.95)), url('/images/hero-main-bg.jpg');
            background-size: cover;
            background-position: center;
            padding: 2rem;
        }

        .login-card {
            max-width: 450px;
            width: 100%;
            background: rgba(30, 30, 30, 0.75);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1.5rem;
            padding: 2.5rem;
            color: var(--color-texto-principal);
            box-shadow: 0 20px 50px rgba(0,0,0,0.3);
        }

            .login-card h2 {
                font-weight: 800;
            }

            .login-card .form-floating > .form-control {
                background-color: rgba(255, 255, 255, 0.05);
                border-color: rgba(255, 255, 255, 0.2);
                color: #fff;
            }

                .login-card .form-floating > .form-control:focus {
                    background-color: rgba(255, 255, 255, 0.1);
                    border-color: var(--color-primario);
                    box-shadow: none;
                }

            .login-card .form-floating > label {
                color: var(--color-texto-secundario);
            }

            .login-card .form-check-label {
                color: var(--color-texto-secundario);
            }

            .login-card .btn-primary {
                background-color: var(--color-primario);
                border: none;
                font-weight: 600;
                padding: 0.75rem;
                border-radius: 0.5rem;
                transition: background-color 0.2s ease;
            }

                .login-card .btn-primary:hover {
                    background-color: #b80322;
                }

            .login-card .small-links a {
                color: var(--color-texto-secundario);
                text-decoration: none;
                transition: color 0.2s ease;
            }

                .login-card .small-links a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Bienvenido a Deluxe Cars</h2>
                <p class="text-white-50">Utiliza tu cuenta para ingresar</p>
            </div>

            <section>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                        <label asp-for="Email" class="form-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Recuérdame
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
                    </div>

                    <div class="text-center mt-4 small-links">
                        <a asp-action="ForgotPassword" asp-controller="Account">¿Olvidaste tu contraseña?</a>                    
                        <span class="mx-2 text-white-50">|</span>
                        @* <a asp-action="Register" asp-controller="Account">Registrar una cuenta nueva</a> *@
                    </div>
                </form>
            </section>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
