<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.AjusteInventarioUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d"
             xmlns:behaviors="clr-namespace:DeluxeCarsDesktop.Behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="700" d:DesignWidth="700"
             UseLayoutRounding="True"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border  CornerRadius="10" MaxWidth="470" HorizontalAlignment="Left" Background="{StaticResource Brush.Menu.GreenDeep}" Grid.Row="0" Margin="20 5 0 15">
            <TextBlock  HorizontalAlignment="Center" Text="Utilice este formulario para corregir el stock de un producto por motivos como daños, pérdidas o errores de conteo." Padding="5"
                           TextWrapping="Wrap" FontFamily="{StaticResource Font.Poppins}" FontSize="18" Foreground="{StaticResource Text.Secondary}" />
        </Border>

        <StackPanel Grid.Row="1" Width="500" Margin="20 0 20 30">
            <Label Content="Buscar Producto por Nombre o Código:" Style="{StaticResource DarkLableForm}"/>
            <TextBox Text="{Binding TextoDeBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ElegantTextBoxStyle}"/>

            <Label Content="Producto:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding ProductosFiltrados}" 
              SelectedItem="{Binding ProductoSeleccionado}"
                      Style="{StaticResource ElegantComboBoxStyle}"
                      FontFamily="{StaticResource Font.Poppins}"
                      Tag="{StaticResource Border.Default}"
                      FontSize="16"
                      DisplayMemberPath="Nombre"/>

            <Label Content="Tipo de Ajuste:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Sumar stock ( + )"
                  FontFamily="{StaticResource Font.Poppins}" Foreground="White" FontSize="16" 
                  IsChecked="{Binding EsEntrada}" GroupName="TipoAjuste"/>

                <RadioButton Content="Restar stock ( - )" 
                  FontFamily="{StaticResource Font.Poppins}" Foreground="White" FontSize="16" 
                  IsChecked="{Binding EsSalida}" GroupName="TipoAjuste" Margin="15,0,0,0"/>
            </StackPanel>

            <Label Content="Cantidad:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ElegantTextBoxStyle}"/>

            <Label Content="Motivo del Ajuste:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>

            <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ElegantTextBoxStyle}" Height="90"  TextWrapping="Wrap"
                     AcceptsReturn="True" VerticalContentAlignment="Top" Padding="10,8" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,10,20">
            <Button Content="Cancelar" Command="{Binding CancelarCommand}" Style="{StaticResource ElegantShadowGhostButton}" Tag="Gray" IsCancel="True" Margin="0,0,15,0"/>
            <Button Content="Guardar" Command="{Binding GuardarCommand}" IsDefault="True" Style="{StaticResource ElegantShadowGhostButton}" Tag="{StaticResource Brush.Menu.GreenForest}"/>
        </StackPanel>
    </Grid>
    

</UserControl>

