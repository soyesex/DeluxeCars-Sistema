<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.CatalogoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             xmlns:viewModel="clr-namespace:DeluxeCarsDesktop.ViewModel"
             mc:Ignorable="d"  
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource SearchBoxStyle}" 
                     Width="200" VerticalAlignment="Center"
                     Tag="Buscar por nombre u OEM..."/>

            <ComboBox ItemsSource="{Binding CategoriasDisponibles}"
                      SelectedItem="{Binding CategoriaFiltroSeleccionada}"
                      Style="{StaticResource DarkComboBoxStyle}"
                      DisplayMemberPath="Nombre"
                      Width="200" Margin="10,0,0,0" VerticalAlignment="Center"/>

            <Button Content="Nuevo Producto" Style="{StaticResource DarkActionButtonStyle}" 
                    Command="{Binding NuevoProductoCommand}" Margin="20,0,0,0" VerticalAlignment="Center"/>

            <Button Content="Editar" Style="{StaticResource DarkActionButtonStyle}" 
                    Command="{Binding EditarProductoCommand}" Margin="10,0,0,0" VerticalAlignment="Center"/>
            
            <Button Content="Eliminar" Style="{StaticResource DarkActionButtonStyle}" 
                    Command="{Binding EliminarProductoCommand}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" CornerRadius="10" 
                Background="{StaticResource PrimaryBackgroundColor}" 
                 BorderBrush="{StaticResource PrimaryBorderColor}" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Productos}"
                      SelectedItem="{Binding ProductoSeleccionado}"
                      Style="{StaticResource ElegantDataGridStyle}"
                      CanUserAddRows="False"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="OEM" Binding="{Binding OriginalEquipamentManufacture}" Width="120"/>
                    <DataGridTextColumn Header="ID Categoría" Binding="{Binding IdCategoria}" Width="150"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C, ConverterCulture=es-CO}" Width="100"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
                    <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
