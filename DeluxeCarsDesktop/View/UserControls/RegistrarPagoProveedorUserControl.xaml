<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.RegistrarPagoProveedorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d" 
             MinWidth="600"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="5 5 5 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="5,0,0,20">
                    <TextBlock Text="Pagando a:" Style="{StaticResource SecondaryTextStyle}" FontSize="25"/>
                    <TextBlock Text="{Binding NombreProveedor}" Style="{StaticResource SecondaryTextStyle}" FontSize="25" Margin="5 0 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="5,0,0,20" >
                    <TextBlock Text="Pedido N°:" Style="{StaticResource SecondaryTextStyle}"/>
                    <TextBlock Text="{Binding NumeroPedido}" Style="{StaticResource SecondaryTextStyle}"
                               Margin="5,0,10,0" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Saldo Pendiente:" Style="{StaticResource SecondaryTextStyle}" 
                               Foreground="{StaticResource PrimaryTextColor}"/>
                    <TextBlock Text="{Binding SaldoActual, StringFormat=C, ConverterCulture=es-CO}" Style="{StaticResource SecondaryTextStyle}" Foreground="{StaticResource Brush.Accent.ElectricBlue}" 
                                FontWeight="DemiBold" Margin="15 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <StackPanel  Grid.Column="0">
                <Label Content="Monto a Pagar:" Style="{StaticResource DarkLableForm}"/>
            <TextBox Text="{Binding MontoAPagar, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                     Style="{StaticResource ElegantTextBoxStyle}" Margin="0 0 0 20"/>

            <Label Content="Fecha del Pago:" Style="{StaticResource DarkLableForm}"/>
                <DatePicker SelectedDate="{Binding FechaDelPago}" Margin="5 0 0 20" Style="{StaticResource DarkDatePickerStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="40 0 0 0">
                <Label Content="Método de Pago:" Style="{StaticResource DarkLableForm}" Margin="0 0 0 0"/>
            <ComboBox ItemsSource="{Binding MetodosDePago}" 
                      SelectedItem="{Binding MetodoPagoSeleccionado}"
                      DisplayMemberPath="Descripcion"
                       Style="{StaticResource ElegantComboBoxStyle}"
                       FontFamily="{StaticResource Font.Poppins}"
                       Tag="{StaticResource Border.Default}" Margin="0 0 0 20"/> 

            <Label Content="Referencia (N° Cheque, Transacción, etc.):" Style="{StaticResource DarkLableForm}"/>
                <TextBox Text="{Binding Referencia, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ElegantTextBoxStyle}"/>

                <Label Content="Notas:" Style="{StaticResource DarkLableForm}"/>
                <TextBox Text="{Binding Notas, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ElegantTextBoxStyle}" Height="60" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

                <Button Grid.Row="2" Content="Guardar Pago" 
         Command="{Binding GuardarPagoCommand}" 
               Style="{StaticResource ElegantShadowGhostButton}"
Tag="{StaticResource Brush.Menu.GreenForest}"
        HorizontalAlignment="Center" VerticalAlignment="Bottom" 
        Width="150" Height="40" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>


       
    </Grid>
</UserControl>
