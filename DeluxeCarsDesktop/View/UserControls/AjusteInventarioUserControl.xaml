<UserControl x:Class="DeluxeCarsDesktop.View.UserControls.AjusteInventarioUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeluxeCarsDesktop.View.UserControls"
             mc:Ignorable="d"
             xmlns:behaviors="clr-namespace:DeluxeCarsDesktop.Behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="500" d:DesignWidth="800"
             UseLayoutRounding="True"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="500" Margin="50">
            <Label Content="Buscar Producto por Nombre o Código:" Style="{StaticResource DarkLableForm}"/>
            <TextBox Text="{Binding TextoDeBusqueda, UpdateSourceTrigger=PropertyChanged}"
             Style="{StaticResource SecondarySearchBoxStyle}"
             Tag="Escribe para buscar..."/>

            <Label Content="Producto:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding ProductosFiltrados}" 
              SelectedItem="{Binding ProductoSeleccionado}"
                      Style="{DynamicResource MaterialDesignComboBox}"
                      Foreground="{StaticResource Text.Secondary}"
                      FontFamily="{StaticResource Font.SourceSans3}"
                      FontWeight="Medium"
                      FontSize="16"
                      BorderBrush="{DynamicResource Background.Disabled}"
                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Brush.Menu.BlueCornflower}"
                      DisplayMemberPath="Nombre"/>

            <Label Content="Tipo de Ajuste:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Entrada (+)"
                  FontFamily="{StaticResource Font.SourceSans3}" Foreground="White" FontSize="16" 
                  IsChecked="{Binding EsEntrada}" GroupName="TipoAjuste"/>

                <RadioButton Content="Salida (-)" 
                  FontFamily="{StaticResource Font.SourceSans3}" Foreground="White" FontSize="16" 
                  IsChecked="{Binding EsSalida}" GroupName="TipoAjuste" Margin="15,0,0,0"/>
            </StackPanel>

            <Label Content="Cantidad:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DarkInputControlStyle}"/>

            <Label Content="Motivo del Ajuste:" Style="{StaticResource DarkLableForm}" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DarkInputControlStyle}" TextWrapping="Wrap" Height="60"/>

            <Button Content="Guardar Ajustes" 
         Style="{StaticResource DarkActionButtonStyle}"
         Command="{Binding GuardarAjusteCommand}"
         Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
    
   
</UserControl>

