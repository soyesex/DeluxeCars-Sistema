<UserControl x:Class="DeluxeCarsUI.View.ProveedorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DeluxeCarsUI.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Converters & Brushes -->
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <SolidColorBrush x:Key="PlaceholderBrush" Color="#b0b9c6" />

        <!-- Column Header Style -->
        <Style x:Key="NoHoverColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- SEARCH AREA -->
        <Grid Grid.Row="0" Margin="5,20,20,15" HorizontalAlignment="Left" Width="400">
            <Border CornerRadius="14" Background="White" BorderBrush="#ced4da" BorderThickness="1" Padding="0">
                <Grid>
                    <!-- TextBox -->
                    <TextBox x:Name="txtSearch" Padding="10,6,35,6" FontFamily="Montserrat" FontSize="14"
                             BorderThickness="0" Background="Transparent" Foreground="#343a40" />

                    <!-- Placeholder -->
                    <TextBlock Text="Buscar proveedor..." FontFamily="Montserrat" FontSize="14"
                               Foreground="{StaticResource PlaceholderBrush}" IsHitTestVisible="False"
                               Margin="10,6,0,6" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text.Length, ElementName=txtSearch}" Value="0" />
                                            <Condition Binding="{Binding IsFocused, ElementName=txtSearch}" Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Search Icon -->
                    <fa:IconImage Icon="MagnifyingGlass" Width="16" Height="16"
                                  Foreground="{StaticResource PlaceholderBrush}"
                                  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0" />
                </Grid>
            </Border>
        </Grid>

        <!-- Data Grid -->
    </Grid>
</UserControl>
