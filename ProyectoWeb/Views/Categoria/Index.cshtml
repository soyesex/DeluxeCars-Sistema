@model IEnumerable<Aplicacion.Application.ViewModels.CategoriaViewModel>
@{
    ViewData["Title"] = "Gestión de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">@ViewData["Title"]</h1>
        <a asp-action="Crear" class="btn btn-primary" style="background-color: var(--color-primario); border-color: var(--color-primario);">
            <i class="bi bi-plus-circle-fill me-2"></i>Crear Nueva Categoría
        </a>
    </div>

    <div class="card order-details-card p-4">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><strong>@item.Nombre</strong></td>
                                <td>@item.Descripcion</td>
                                <td class="text-end">
                                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">Eliminar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">No hay categorías para mostrar. ¡Crea la primera!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
